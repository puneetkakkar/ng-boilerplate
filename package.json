{
  "name": "ngx-arc",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "eslint --format=pretty --color 'src/**/*.ts' --ext .ts --ignore-pattern '**/*.spec.ts' --fix",
    "lint:report": "eslint 'src/**/*.ts' --ext .ts --ignore-pattern '**/*.spec.ts' --fix --format json -o './lint-report/index.json'; prettier --write './lint-report/index.json';exit 0",
    "format:fix": "prettier --write '{src,e2e}/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "remove:dist": "rimraf dist",
    "build:prod": "yarn remove:dist && yarn build --configuration production",
    "build:stage": "yarn remove:dist && yarn build --configuration staging",
    "build:dev": "yarn remove:dist && yarn build --configuration development",
    "serve:prod": "ng serve --configuration production",
    "serve:stage": "ng serve --configuration staging",
    "serve:dev": "ng serve --configuration development",
    "serve:hmr": "ng serve --configuration hmr",
    "serve:ssr": "node dist/ngx-arc/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.3.0",
    "@angular/common": "^17.3.0",
    "@angular/compiler": "^17.3.0",
    "@angular/core": "^17.3.0",
    "@angular/forms": "^17.3.0",
    "@angular/platform-browser": "^17.3.0",
    "@angular/platform-browser-dynamic": "^17.3.0",
    "@angular/platform-server": "^17.3.0",
    "@angular/router": "^17.3.0",
    "@angular/ssr": "^17.3.6",
    "@angularclass/hmr": "^3.0.0",
    "@ngrx/effects": "^17.2.0",
    "@ngrx/store": "^17.2.0",
    "@ngx-toolkit/device": "^13.2.1",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.6",
    "@angular/cli": "^17.3.6",
    "@angular/compiler-cli": "^17.3.0",
    "@ngrx/store-devtools": "^17.2.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prettier": "^3.2.5",
    "typescript": "~5.4.2"
  }
}
